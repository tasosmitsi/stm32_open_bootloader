{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "power_on",
      "command": "JLinkExe -CommandFile .vscode/jlink/power-on.jlink",
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "power_off",
      "command": "JLinkExe -CommandFile .vscode/jlink/power-off.jlink",
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "build_bootloader",
      "options": {
        "cwd": "bootloader"
      },
      "command": "make -j 8",
      "problemMatcher": "$gcc",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "shell",
      "label": "build_app",
      "options": {
        "cwd": "app"
      },
      "command": "make -j 8",
      "problemMatcher": "$gcc"
    },
    {
      "label": "build_all",
      "dependsOn": [
        "build_bootloader",
        "build_app"
      ]
    }
  ]
}